<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/to_do_list"
        android:label="@string/app_name"
        android:roundIcon="@drawable/to_do_list"
        android:supportsRtl="true"
        android:theme="@style/Theme.G2CApp">
        <activity
            android:name="com.charge.todolist.account.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="com.charge.todolist.account.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.charge.todolist.MainActivity"
            android:exported="false">
        </activity>
    </application>

</manifest>